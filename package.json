{
  "name": "gigapay-typescript-sdk",
  "version": "0.0.1",
  "description": "A modern, type-safe TypeScript SDK for the Gigapay API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run typecheck && npm run build",
    "typecheck": "tsc --noEmit",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "gigapay",
    "api",
    "sdk",
    "typescript",
    "payments"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/gigapay-typescript-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/gigapay-typescript-sdk/issues"
  },
  "homepage": "https://github.com/yourusername/gigapay-typescript-sdk#readme",
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
